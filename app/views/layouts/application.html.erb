<!DOCTYPE html>
<html>
<head>
  <title>VideoLibrary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Video Library App</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Videos', videos_path %></li>
        <li><%= link_to 'Producers', producers_path %></li>
        <li><%= link_to 'Actors', actors_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
             role="button" aria-haspopup="true" aria-expanded="false">Create <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'New Video', new_video_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'New Producer', new_producer_path %></li>
            <li><%= link_to 'New Actor', new_actor_path %></li>
          </ul>
        </li>
      </ul>
      <% if controller_name == 'videos' && action_name == 'index' %>
        <form class="navbar-form navbar-right" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Filter by Actor">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      <% end %>
    </div>
  </div>
</nav>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
