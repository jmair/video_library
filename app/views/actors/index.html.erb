<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.full_name %></td>
        <td><%= link_to 'Show', actor, class: 'btn-xs btn-info' %>
        <%= link_to 'Edit', edit_actor_path(actor), class: 'btn-xs btn-warning' %>
        <%= link_to 'Destroy', actor, method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>