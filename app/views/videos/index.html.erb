<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Producer</th>
      <th>Actors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.description %></td>
        <td><%= video.producer.full_name %></td>
        <td>
          <% video.actors.each do |actor| %>
          <%= actor.full_name %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', video, class: 'btn-xs btn-info' %>
        <%= link_to 'Edit', edit_video_path(video), class: 'btn-xs btn-warning' %>
        <%= link_to 'Destroy', video, class: 'btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
