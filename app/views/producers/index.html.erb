<p id="notice"><%= notice %></p>

<h1>Producers</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @producers.each do |producer| %>
      <tr>
        <td><%= producer.full_name %></td>
        <td><%= link_to 'Show', producer, class: 'btn-xs btn-info' %>
        <%= link_to 'Edit', edit_producer_path(producer), class: 'btn-xs btn-warning' %>
        <%= link_to 'Destroy', producer,
                method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>